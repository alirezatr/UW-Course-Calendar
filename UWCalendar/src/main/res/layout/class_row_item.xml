<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="8dp"
    android:paddingRight="10dp"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/class_lecture"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/listview_headers_colors"
                android:text="Heading"/>

            <TextView
                android:id="@+id/class_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:textSize="13dp"
                android:layout_marginTop="-2dp"
                android:textColor="@drawable/listview_details_colors"/>

        </LinearLayout>

        <TextView
            android:id="@+id/class_time"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/listview_details_colors"
            android:layout_alignParentRight="true"
            android:text="Heading"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/class_instructor"
            android:textSize="14dp"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@drawable/listview_details_colors"/>

        <TextView
            android:id="@+id/class_room"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/listview_details_colors"
            android:layout_alignParentRight="true"
            android:text="Heading"/>

    </RelativeLayout>

</LinearLayout>